<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Spinner>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </Spinner>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="30sp" />
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:stretchColumns="0,1,2">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="9"
                android:textSize="25sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="0dp"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="0dp"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="0dp"
                android:text="6"
                android:textSize="25sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="3"
                android:textSize="25sp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn0"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="."
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:padding="1dp"
                android:text="C"
                android:textSize="30sp" />

        </TableRow>

    </TableLayout>

</LinearLayout>