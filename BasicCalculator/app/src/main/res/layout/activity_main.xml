<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CFCFCF"
        android:gravity="center_vertical|right"
        android:text="0"
        android:textSize="60sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:stretchColumns="0,1,2,3">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btnCE"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="CE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="C"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnBS"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="BS"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="×"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSub"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="−"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btnSign"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="+/-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#DDDDDD"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#CFCFCF"
                android:text="="
                android:textSize="20sp"
                android:textStyle=""/>
        </TableRow>
        <ImageView
            android:sr/>
    </TableLayout>
</LinearLayout>